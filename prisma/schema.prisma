generator client { provider = "prisma-client-js" }
datasource db { provider = "postgresql"; url = env("DATABASE_URL") }
model User { id Int @id @default(autoincrement()); name String; email String @unique; passwordHash String; role String; employeeId Int?; createdAt DateTime @default(now()) }
model Employee { id Int @id @default(autoincrement()); name String; position String; active Boolean @default(true) }
model Attendance { id Int @id @default(autoincrement()); employeeId Int; date DateTime; status String; notes String?; createdBy Int; updatedBy Int?; updatedAt DateTime? }
model AuditLog { id Int @id @default(autoincrement()); attendanceId Int; oldStatus String; newStatus String; changedBy Int; changedAt DateTime @default(now()) }